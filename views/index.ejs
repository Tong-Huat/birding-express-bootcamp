<%- include('header', {title: `Birding Record`}); -%>
  <h1>Notes Record</h1>
  <table class="table table-striped table-sm table-responsive-md">
    <thead>
      <tr class="thead">
        <th scope="col">Report</th>
        <th scope="col">Date</th>
        <th scope="col">Summary</th>
        <th scope="col" colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <!-- Create an row for each sighting -->
      <% for (let i=0; i < data.length; i +=1) {%>
        <tr>
          <th scope="row" class="theader">
            <%= data[i].id %>
          </th>
          <td class="tdata">
            <a href="<%= `/note/${data[i].id}` %>">
              <%= data[i].date %>
            </a>
          </td>
          <td class="tdata">
            <%= data[i].behaviour %>
          </td>
          <td class="tdata">
            <%= data[i].species_name %>
          </td>
          <td>
            <form action="/note/<%= data[i].id %>?_method=DELETE" method="POST">
              <input type="submit" value="Delete" />
            </form>
          </td>

        </tr>
        <% }; %>
    </tbody>
  </table>


  <%- include('footer'); -%>